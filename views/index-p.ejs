<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/kado.css">
    </head>
    <body>
        <% if (login) { %>
        <%- include('./partials/navigator.ejs') %>
        <main class="main e-main">
            <form action="/vaula" method="post" class="box form-p-aula">
                <h2 class="titulo_pestana">Aulas</h2><br>
                <% for(i = 0; i < infoAula.length; i++){ %>
                    <button type="submit" class="box" name="gs_<%= infoAula[i].GRADO %><%= infoAula[i]['SECCIÓN'] %>">
                        <h4><%= infoAula[i].GRADO %>° Grado</h4>
                        <h4>Sección: '<%= infoAula[i]['SECCIÓN'] %>'</h4> 
                    </button>                            
                <% } %>
            </form>
            <section class="box horario-p">

            </section>
        </main>
        <%- include('./partials/footer.ejs') %>
        <% } else { %>
            <h1><strong><%= name %></strong></h1>
            <a href="/" class="a-login">Ir al login</a>
        <% } %>
    </body>
</html>