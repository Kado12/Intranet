<script>
    // Obtener todos los contenedores de la clase "box_unidad"
const boxUnidades = document.querySelectorAll('.box_unidad');

// Recorrer cada contenedor
boxUnidades.forEach(boxUnidad => {
    // Obtener el botón y el contenido dentro de cada contenedor
    const toggleButton = boxUnidad.querySelector('.toggle-btn');
    const content = boxUnidad.querySelector('.content');
    let rotated = false;
    // Agregar evento de clic al botón
    toggleButton.addEventListener('mousedown', () => {
        // Alternar la visibilidad del contenido
        if (content.style.display === 'none' && !rotated) {
            content.style.display = 'block';
            toggleButton.classList.add('rotated');
            rotated = true;
        } else {
            content.style.display = 'none';
            toggleButton.classList.remove('rotated');
            rotated = false;
        }
    });
});
</script>