<script>
  
// Formulario Agregar Clase
const formAgregarClase = document.getElementById('form-agregar-clase');
const btnAgregarClase = document.getElementById('btnAgregarClase')
const btnCerrarFormAgregarClase = document.getElementById('btnCerrarFormAgregarClase')

btnAgregarClase.addEventListener('click', function(){
  formAgregarClase.style.display = 'block'
  window.scrollTo({
    top: 0,
  });
  window.onscroll = function() {
    window.scrollTo(0, 0);
  };
});
btnCerrarFormAgregarClase.addEventListener('click', function(){
  formAgregarClase.style.display = 'none';
  desbloquearScroll()
});


function desbloquearScroll() {
  window.onscroll = null;
}
</script>